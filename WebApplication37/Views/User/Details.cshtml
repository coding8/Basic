@model WebApplication37.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>用户详细</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt> @Html.DisplayNameFor(model => model.UserName) </dt>
        <dd> @Html.DisplayFor(model => model.UserName) </dd>
    </dl>
</div>
<h4>用户所属角色：</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>该用户尚无角色.</p>
}
<table class="table">
    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td> @item </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("编辑", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("返回", "Index")
</p>